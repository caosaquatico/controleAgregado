<div style="margin: 90px;">
    <div style="display: inline-flex;">
        <h1 class="cabeca" >Saida das notas e pedidos que est√£o com os agragados </h1>
        <a style="margin-left: 35px;" class="cabeca" href="/">Home</a>
    </div>  
        <div class="cabeca">
        {{{agregado}}}
        <div id="data"></div>
    </div><br>
    <table id="valores">
        <tr>
            <th>NUMERO DO PEDIDO/ NOTA FISCAL</th>
            <th>VALOR DO PEDIDO</th>
            <th>VALOR DO FRETE</th>
            <th>ENTREGUE</th>      
        </tr>
            {{#linha}}
            <tr>
                <td>{{numNota}}</td>
                <td>{{valorPedido}}</td>
                <td>{{valorFrete}}</td>                
                <td><input id="{{idItem}}" type="checkbox" onclick="check({{idItem}})" name="status" {{status}}></td>
            </tr>
           {{/linha}}
        </table>
    
</div>
<script>     
    function data(){
        document.getElementById('data').innerHTML = "{{{data}}}"
    }
    function check(id){
        var checkBox = document.getElementById(id);
        console.log(checkBox.checked)
        if(checkBox.checked ==true){
            checkBox = "checked"
        } else{
            checkBox = ""
        }
        var data = {
            idNota: id,
            status: checkBox
        }
        $.post('/statusNotas', data)
    }
    data()
</script>
